@inherits LayoutComponentBase

<div class="md-app">
    <aside class="md-drawer">
        <NavMenu />
    </aside>

    <main class="md-main">
        <header class="md-appbar">
            <h1 class="md-appbar-title">Operations One Centre</h1>
            <div class="md-appbar-actions">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="md-btn md-btn-text">
                    <span class="material-symbols-rounded">help</span>
                    About
                </a>
            </div>
        </header>

        <article class="md-content">
            <div class="md-page-transition-container">
                @Body
            </div>
        </article>
    </main>

    @* Bottom Navigation Bar - Visible only on mobile (<768px) *@
    <nav class="md-bottom-nav">
        <div class="md-bottom-nav-items">
            <NavLink class="md-bottom-nav-item" href="" Match="NavLinkMatch.All">
                <span class="material-symbols-rounded">home</span>
                <span class="md-bottom-nav-item-label">Home</span>
            </NavLink>
            <NavLink class="md-bottom-nav-item" href="chat">
                <span class="material-symbols-rounded">chat</span>
                <span class="md-bottom-nav-item-label">Chat</span>
            </NavLink>
            <NavLink class="md-bottom-nav-item" href="search">
                <span class="material-symbols-rounded">search</span>
                <span class="md-bottom-nav-item-label">Search</span>
            </NavLink>
            <NavLink class="md-bottom-nav-item" href="tickets">
                <span class="material-symbols-rounded">confirmation_number</span>
                <span class="md-bottom-nav-item-label">Tickets</span>
            </NavLink>
        </div>
    </nav>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
