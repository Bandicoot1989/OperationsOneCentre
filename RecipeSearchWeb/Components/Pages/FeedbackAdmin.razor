@page "/feedback-admin"
@using RecipeSearchWeb.Services
@using RecipeSearchWeb.Models
@inject FeedbackService FeedbackService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Feedback Admin - Bot Training</PageTitle>

<div class="feedback-admin-container">
    <div class="admin-header">
        <h1>ü§ñ Bot Training Dashboard</h1>
        <p>Review user feedback to improve the AI assistant</p>
        
        @* Health Check Banner *@
        @if (healthCheckDone)
        {
            <div class="health-banner @(isHealthy ? "healthy" : "unhealthy")">
                @if (isHealthy)
                {
                    <span>‚úÖ @healthMessage</span>
                }
                else
                {
                    <span>‚ùå @healthMessage</span>
                }
            </div>
        }
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading feedback data...</p>
        </div>
    }
    else
    {
        @* Stats Overview *@
        <div class="stats-grid">
            <div class="stat-card positive">
                <div class="stat-value">@stats.PositiveFeedback</div>
                <div class="stat-label">üëç Helpful</div>
            </div>
            <div class="stat-card negative">
                <div class="stat-value">@stats.NegativeFeedback</div>
                <div class="stat-label">üëé Not Helpful</div>
            </div>
            <div class="stat-card neutral">
                <div class="stat-value">@stats.SatisfactionRate.ToString("F1")%</div>
                <div class="stat-label">üìä Satisfaction</div>
            </div>
            <div class="stat-card warning">
                <div class="stat-value">@stats.UnreviewedCount</div>
                <div class="stat-label">‚è≥ Pending Review</div>
            </div>
            <div class="stat-card info">
                <div class="stat-value">@stats.LowConfidenceCount</div>
                <div class="stat-label">‚ö†Ô∏è Low Confidence</div>
            </div>
            <div class="stat-card success">
                <div class="stat-value">@stats.CachedSuccessfulResponses</div>
                <div class="stat-label">üíæ Cached Responses</div>
            </div>
            <div class="stat-card learning">
                <div class="stat-value">@stats.AutoEnrichedKeywords</div>
                <div class="stat-label">üß† Auto-Enriched</div>
            </div>
        </div>

        @* Failure Pattern Alerts *@
        @if (stats.FailurePatterns.Any())
        {
            <div class="section-card alert-card">
                <h2>üö® Failure Pattern Alerts</h2>
                <p class="section-description">Recurring query patterns that need attention</p>
                <div class="failure-patterns">
                    @foreach (var pattern in stats.FailurePatterns)
                    {
                        <div class="pattern-item">
                            <div class="pattern-header">
                                <span class="pattern-badge">@pattern.PatternDescription</span>
                                <span class="pattern-count">@pattern.FailureCount failures</span>
                            </div>
                            @if (!string.IsNullOrEmpty(pattern.SuggestedAction))
                            {
                                <div class="pattern-action">üí° @pattern.SuggestedAction</div>
                            }
                            <details class="pattern-details">
                                <summary>Sample queries (@pattern.SampleQueries.Count)</summary>
                                <ul>
                                    @foreach (var q in pattern.SampleQueries.Take(5))
                                    {
                                        <li>@q</li>
                                    }
                                </ul>
                            </details>
                        </div>
                    }
                </div>
            </div>
        }

        @* Top Suggested Keywords *@
        @if (stats.TopSuggestions.Any())
        {
            <div class="section-card">
                <h2>üîë Suggested Keywords for Improvement</h2>
                <p class="section-description">Keywords extracted from failed queries that could improve future matches</p>
                <div class="keyword-suggestions">
                    @foreach (var suggestion in stats.TopSuggestions.Take(10))
                    {
                        <div class="keyword-item">
                            <span class="keyword-badge">@suggestion.Keyword</span>
                            <span class="keyword-freq">@suggestion.Frequency times</span>
                            @if (suggestion.RelatedQueries.Any())
                            {
                                <details class="keyword-details">
                                    <summary>Related queries</summary>
                                    <ul>
                                        @foreach (var query in suggestion.RelatedQueries)
                                        {
                                            <li>@query</li>
                                        }
                                    </ul>
                                </details>
                            }
                        </div>
                    }
                </div>
            </div>
        }

        @* Filter Tabs *@
        <div class="filter-tabs">
            <button class="tab @(currentFilter == "all" ? "active" : "")" @onclick="@(() => SetFilter("all"))">
                All (@allFeedback.Count)
            </button>
            <button class="tab @(currentFilter == "negative" ? "active" : "")" @onclick="@(() => SetFilter("negative"))">
                üëé Negative (@negativeFeedback.Count)
            </button>
            <button class="tab @(currentFilter == "unreviewed" ? "active" : "")" @onclick="@(() => SetFilter("unreviewed"))">
                ‚è≥ Unreviewed (@unreviewedFeedback.Count)
            </button>
        </div>

        @* Feedback List *@
        <div class="feedback-list">
            @if (!filteredFeedback.Any())
            {
                <div class="empty-state">
                    <span class="empty-icon">üì≠</span>
                    <p>No feedback entries found</p>
                </div>
            }
            else
            {
                @foreach (var feedback in filteredFeedback.Take(50))
                {
                    <div class="feedback-card @(feedback.IsHelpful ? "positive" : "negative") @(feedback.IsReviewed ? "reviewed" : "")">
                        <div class="feedback-header">
                            <span class="feedback-rating">@(feedback.IsHelpful ? "üëç" : "üëé")</span>
                            <span class="feedback-agent">@feedback.AgentType</span>
                            <span class="feedback-date">@feedback.Timestamp.ToString("MMM dd HH:mm")</span>
                            @if (feedback.WasLowConfidence)
                            {
                                <span class="badge low-confidence">Low Confidence</span>
                            }
                            @if (feedback.IsReviewed)
                            {
                                <span class="badge reviewed">‚úì Reviewed</span>
                            }
                        </div>
                        
                        <div class="feedback-body">
                            <div class="feedback-query">
                                <strong>Query:</strong>
                                <p>@feedback.Query</p>
                            </div>
                            <div class="feedback-response">
                                <strong>Response:</strong>
                                <p class="response-text">@TruncateText(feedback.Response, 300)</p>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(feedback.Comment))
                            {
                                <div class="feedback-comment">
                                    <strong>User Comment:</strong>
                                    <p>@feedback.Comment</p>
                                </div>
                            }
                            
                            @if (feedback.SuggestedKeywords.Any())
                            {
                                <div class="feedback-keywords">
                                    <strong>Suggested Keywords:</strong>
                                    <div class="keywords-list">
                                        @foreach (var kw in feedback.SuggestedKeywords)
                                        {
                                            <span class="keyword-chip">@kw</span>
                                        }
                                    </div>
                                </div>
                            }
                            
                            <div class="feedback-meta">
                                <span>Score: @feedback.BestSearchScore.ToString("F3")</span>
                            </div>
                        </div>
                        
                        <div class="feedback-actions">
                            @if (!feedback.IsReviewed)
                            {
                                <button class="action-btn" @onclick="() => MarkReviewed(feedback.Id)">
                                    ‚úì Mark Reviewed
                                </button>
                            }
                            @if (!feedback.IsApplied && !feedback.IsHelpful)
                            {
                                <button class="action-btn primary" @onclick="() => MarkApplied(feedback.Id)">
                                    üîß Mark Fixed
                                </button>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    }
</div>

@code {
    private bool isLoading = true;
    private string currentFilter = "unreviewed";
    
    private FeedbackStats stats = new();
    private List<ChatFeedback> allFeedback = new();
    private List<ChatFeedback> negativeFeedback = new();
    private List<ChatFeedback> unreviewedFeedback = new();
    private List<ChatFeedback> filteredFeedback = new();
    
    // Health check status
    private bool healthCheckDone = false;
    private bool isHealthy = false;
    private string healthMessage = "";

    protected override async Task OnInitializedAsync()
    {
        // Check health first
        var (healthy, message) = await FeedbackService.CheckHealthAsync();
        isHealthy = healthy;
        healthMessage = message;
        healthCheckDone = true;
        
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        isLoading = true;
        StateHasChanged();
        
        try
        {
            stats = await FeedbackService.GetStatsAsync();
            allFeedback = await FeedbackService.GetAllFeedbackAsync();
            negativeFeedback = await FeedbackService.GetNegativeFeedbackAsync();
            unreviewedFeedback = await FeedbackService.GetUnreviewedFeedbackAsync();
            
            SetFilter(currentFilter);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading feedback: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void SetFilter(string filter)
    {
        currentFilter = filter;
        filteredFeedback = filter switch
        {
            "negative" => negativeFeedback,
            "unreviewed" => unreviewedFeedback,
            _ => allFeedback
        };
        StateHasChanged();
    }

    private async Task MarkReviewed(string feedbackId)
    {
        await FeedbackService.MarkAsReviewedAsync(feedbackId);
        await LoadDataAsync();
    }

    private async Task MarkApplied(string feedbackId)
    {
        await FeedbackService.MarkAsAppliedAsync(feedbackId);
        await LoadDataAsync();
    }

    private string TruncateText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text) || text.Length <= maxLength)
            return text;
        return text.Substring(0, maxLength) + "...";
    }
}

