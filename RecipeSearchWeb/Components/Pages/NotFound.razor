@page "/not-found"
@layout MainLayout

<div class="md-page" style="max-width: 600px; margin: 48px auto; padding: 0 24px;">
    <div class="md-card" style="text-align: center; padding: 48px;">
        <div class="md-card-icon" style="width: 80px; height: 80px; background: #FEF7E0; color: #B06000; margin: 0 auto 24px; font-size: 32px;">
            <span class="material-symbols-outlined" style="font-size: 40px;">search_off</span>
        </div>
        
        <h1 class="md-page-title" style="justify-content: center; font-size: 1.75rem;">
            Page Not Found
        </h1>
        
        <p style="color: #5F6368; margin-bottom: 24px;">
            Sorry, the content you are looking for does not exist or has been moved.
        </p>

        <a href="/" class="md-btn-filled" style="text-decoration: none; display: inline-flex; align-items: center; gap: 8px;">
            <span class="material-symbols-outlined" style="font-size: 18px;">home</span>
            Back to Home
        </a>
    </div>
</div>