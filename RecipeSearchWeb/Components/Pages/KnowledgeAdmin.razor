                statusMessage = "Failed to upload image";
                isError = true;
            }
        }
        catch (Exception ex)
        {
            statusMessage = $"Error: {ex.Message}";
            isError = true;
        }
        finally
        {
            imageUploadProgress = 0;
            StateHasChanged();
        }
    }

