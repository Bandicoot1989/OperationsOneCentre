@using RecipeSearchWeb.Services
@using RecipeSearchWeb.Models
@inject AzureAuthService AuthService
@inject NavigationManager Navigation

<div class="md-drawer-header">
    <div class="brand-container">
        <img src="logo.png" alt="Antolin" class="company-logo" />
        <span class="app-name">Operations One Centre</span>
    </div>
    @if (currentUser != null)
    {
        <div class="user-info">
            <div class="md-avatar">
                @(currentUser.FullName?.Length > 0 ? currentUser.FullName[0].ToString().ToUpper() : "U")
            </div>
            <div class="user-details">
                <span class="user-name">@currentUser.FullName</span>
                <span class="user-role">@currentUser.Role</span>
            </div>
        </div>
    }
</div>

<hr class="md-divider" />

<nav class="md-nav">
    <NavLink class="md-nav-item" href="" Match="NavLinkMatch.All">
        <span class="material-symbols-outlined">home</span>
        <span>Home</span>
    </NavLink>

    <NavLink class="md-nav-item" href="scripts">
        <span class="material-symbols-outlined">code</span>
        <span>Scripts</span>
    </NavLink>

    <NavLink class="md-nav-item" href="knowledge">
        <span class="material-symbols-outlined">menu_book</span>
        <span>Knowledge Base</span>
    </NavLink>

    <NavLink class="md-nav-item" href="agent-context">
        <span class="material-symbols-outlined">psychology</span>
        <span>Agent Context</span>
    </NavLink>

    <NavLink class="md-nav-item" href="feedback-admin">
        <span class="material-symbols-outlined">rate_review</span>
        <span>Feedback & Training</span>
    </NavLink>

    @if (currentUser != null)
    {
        <hr class="md-divider" />
        <a href="@AuthService.GetLogoutUrl()" class="md-nav-item">
            <span class="material-symbols-outlined">logout</span>
            <span>Logout</span>
        </a>
    }
</nav>

@code {
    private User? currentUser = null;

    protected override void OnInitialized()
    {
        currentUser = AuthService.GetCurrentUser();
    }
}

<style>
/* Material Design Navigation */
.md-drawer-header {
    padding: 16px;
    padding-top: 24px;
}

.brand-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    margin-bottom: 16px;
}

.company-logo {
    height: 48px;
    width: auto;
    object-fit: contain;
}

.app-name {
    font-family: 'Roboto', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: #1A73E8;
    text-align: center;
}

.user-info {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    background-color: #FFFFFF;
    border-radius: 12px;
    box-shadow: 0 1px 2px 0 rgba(60, 64, 67, 0.3), 0 1px 3px 1px rgba(60, 64, 67, 0.15);
}

.md-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: #D3E3FD;
    color: #1A73E8;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 500;
    font-size: 1rem;
}

.user-details {
    display: flex;
    flex-direction: column;
}

.user-name {
    font-size: 0.875rem;
    font-weight: 500;
    color: #202124;
}

.user-role {
    font-size: 0.75rem;
    color: #5F6368;
}

.md-divider {
    height: 1px;
    background-color: #E8EAED;
    border: none;
    margin: 8px 16px;
}

.md-nav {
    padding: 8px;
}

.md-nav-item {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 12px 24px;
    border-radius: 9999px;
    color: #202124;
    text-decoration: none;
    font-family: 'Roboto', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    transition: background-color 150ms ease;
    margin-bottom: 4px;
}

.md-nav-item:hover {
    background-color: #E8EAED;
    text-decoration: none;
}

.md-nav-item.active {
    background-color: #D3E3FD;
    color: #1A73E8;
}

.md-nav-item .material-symbols-outlined {
    font-size: 24px;
    color: #5F6368;
}

.md-nav-item.active .material-symbols-outlined {
    color: #1A73E8;
}

@@media (max-width: 960px) {
    .md-drawer-header {
        padding: 12px;
        padding-top: 16px;
    }
    
    .company-logo {
        height: 36px;
    }
    
    .app-name {
        font-size: 0.75rem;
    }
}
</style>