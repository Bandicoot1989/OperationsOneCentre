@inherits LayoutComponentBase

<div class="md-app">
    <aside class="md-drawer">
        <NavMenu />
    </aside>

    <main class="md-main">
        <header class="md-appbar">
            <h1 class="md-appbar-title">Operations One Centre</h1>
            <div class="md-appbar-actions">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="md-btn md-btn-text">
                    <span class="material-symbols-outlined">help</span>
                    About
                </a>
            </div>
        </header>

        <article class="md-content">
            @Body
        </article>
    </main>
</div>

@* Knowledge Base AI Assistant Chat *@
<KnowledgeChat @rendermode="InteractiveServer" />

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
