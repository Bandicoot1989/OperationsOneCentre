@using RecipeSearchWeb.Services
@using RecipeSearchWeb.Interfaces
@using RecipeSearchWeb.Models
@inject IKnowledgeAgentService AgentService
@inject IFeedbackService FeedbackService
@inject NavigationManager Navigation
@implements IDisposable

@* Centered Gemini-style Chat Container *@
<div class="gemini-chat-container">
    
    @if (!messages.Any())
    {
        @* Welcome/Initial View - Centered with Logo *@
        <div class="gemini-welcome-view">
            <div class="gemini-header-logo">
                <img src="chatbot-icon.png" alt="Knowledge Assistant" class="gemini-logo-img" />
            </div>
            
            <h1 class="gemini-title">¬øPor d√≥nde empezamos?</h1>
            
