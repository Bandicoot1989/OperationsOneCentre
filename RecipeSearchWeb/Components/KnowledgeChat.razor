                                            <label class="correction-label">
                                                Por favor, describe la respuesta correcta o qu√© informaci√≥n faltaba:
                                            </label>
                                            <textarea 
                                                class="correction-textarea" 
                                                @bind="msg.CorrectionText"
                                                placeholder="Ejemplo: La respuesta correcta es usar la transacci√≥n SU01 en SAP..."
                                                rows="4"></textarea>
                                            <div class="correction-actions">
                                                <button class="btn-submit-correction" @onclick="() => SubmitCorrection(msg)" disabled="@string.IsNullOrWhiteSpace(msg.CorrectionText)">
                                                    <span class="material-symbols-outlined">send</span>
                                                    Enviar Correcci√≥n
                                                </button>
                                                <button class="btn-cancel-correction" @onclick="() => CancelCorrection(msg)">
                                                    Cancelar
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            
                            <span class="message-time">@msg.Timestamp.ToString("HH:mm")</span>
                        </div>
                    </div>
                }

                @if (isProcessing)
                {
                    <div class="gemini-message assistant">
                        <div class="message-avatar">
                            <img src="chatbot-icon.png" alt="Bot" class="assistant-avatar" />
                        </div>
                        <div class="message-body">
                            <div class="typing-indicator">
                                <span></span>
                                <span></span>
                                <span></span>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @* Fixed Input Area at Bottom *@
            <div class="gemini-input-fixed">
                <div class="gemini-input-wrapper">
                    <textarea 
                        @bind="currentMessage" 
                        @bind:event="oninput"
                        @onkeydown="HandleKeyDown"
                        placeholder="Escribe tu pregunta..."
                        rows="1"
                        disabled="@isProcessing"
                        class="gemini-input"></textarea>
                    <button 
                        class="gemini-send-btn" 
                        @onclick="SendMessage" 
                        disabled="@(isProcessing || string.IsNullOrWhiteSpace(currentMessage))"
                        title="Send message">
                        <span class="material-symbols-outlined">send</span>
                    </button>
                </div>
                <span class="input-hint">Enter para enviar, Shift+Enter para nueva l√≠nea</span>
            </div>
        </div>
    }
</div>

@code {
    [CascadingParameter(Name = "CurrentUser")]
    private User? currentUser { get; set; }

    private bool isProcessing = false;
    private string currentMessage = string.Empty;
    private List<ChatMessage> messages = new();
    private ElementReference messagesContainer;

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            await SendMessage();
        }
    }

    private async Task AskSuggestion(string suggestion)
    {
        currentMessage = suggestion;
        await SendMessage();
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(currentMessage) || isProcessing)
            return;

        var question = currentMessage.Trim();
        currentMessage = string.Empty;
        
        // Add user message
        messages.Add(new ChatMessage
        {
            Text = question,
            IsUser = true,
            Timestamp = DateTime.Now
        });

        isProcessing = true;
        StateHasChanged();
        await ScrollToBottom();

        try
        {
            // Build conversation history for context
            var conversationHistory = BuildConversationHistory();
            
            // Get AI response with conversation context
            var response = await AgentService.AskAsync(question, conversationHistory);

            // Add assistant message with metadata for feedback
            messages.Add(new ChatMessage
            {
                Text = response.Answer,
                IsUser = false,
                Timestamp = DateTime.Now,
                References = response.RelevantArticles,
                Sources = response.UsedSources, // NEW: Capture sources for feedback
                OriginalQuery = question,
                AgentType = response.AgentType ?? "General",
                BestSearchScore = response.BestSearchScore,
                WasLowConfidence = response.IsLowConfidence
            });
        }
        catch
        {
            messages.Add(new ChatMessage
            {
                Text = "I'm sorry, I encountered an error. Please try again or contact IT support.",
                IsUser = false,
                Timestamp = DateTime.Now
            });
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
            await ScrollToBottom();
        }
    }

    private void ClearChat()
    {
        messages.Clear();
    }

    /// <summary>
    /// Handle positive feedback (üëç)
    /// </summary>
    private async Task HandlePositiveFeedback(ChatMessage msg)
    {
        if (msg.HasFeedback) return;
        
        try
        {
            await FeedbackService.SubmitFeedbackAsync(
                query: msg.OriginalQuery ?? "",
                response: msg.Text,
                isHelpful: true,
                agentType: msg.AgentType,
                bestScore: msg.BestSearchScore,
                wasLowConfidence: msg.WasLowConfidence,
                userId: currentUser?.Username
            );
            
            msg.HasFeedback = true;
            msg.IsPositive = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error submitting positive feedback: {ex.Message}");
        }
    }

    /// <summary>
    /// Handle negative feedback (üëé) - Show correction panel
    /// </summary>
    private void HandleNegativeFeedback(ChatMessage msg)
    {
        if (msg.HasFeedback) return;
        
        msg.ShowCorrectionInput = true;
        StateHasChanged();
    }

    /// <summary>
    /// Submit correction with negative feedback
    /// </summary>
    private async Task SubmitCorrection(ChatMessage msg)
    {
        if (string.IsNullOrWhiteSpace(msg.CorrectionText)) return;
        
        try
        {
            await FeedbackService.SubmitFeedbackWithCorrectionAsync(
                query: msg.OriginalQuery ?? "",
                response: msg.Text,
                userCorrection: msg.CorrectionText,
                sourcesUsed: msg.Sources ?? new List<string>(),
                userId: currentUser?.Username,
                agentType: msg.AgentType,
                bestScore: msg.BestSearchScore,
                wasLowConfidence: msg.WasLowConfidence
            );
            
            msg.HasFeedback = true;
            msg.IsPositive = false;
            msg.ShowCorrectionInput = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error submitting correction: {ex.Message}");
        }
    }

    /// <summary>
    /// Cancel correction input
    /// </summary>
    private void CancelCorrection(ChatMessage msg)
    {
        msg.ShowCorrectionInput = false;
        msg.CorrectionText = string.Empty;
        StateHasChanged();
    }

    private void NavigateToArticle(string kbNumber)
    {
        Navigation.NavigateTo($"/knowledge/{kbNumber}");
    }

    private async Task ScrollToBottom()
    {
        await Task.Delay(50);
        // Scroll will be handled by CSS scroll-behavior
    }

    private string FormatMessage(string text)
    {
        if (string.IsNullOrEmpty(text)) return text;
        
        // STEP 1: Extract and preserve markdown links BEFORE HTML encoding
        var linkPlaceholders = new Dictionary<string, string>();
        var markdownLinkPattern = new System.Text.RegularExpressions.Regex(
            @"\[([^\]]+)\]\((https?://[^\)]+)\)");
        
        int linkIndex = 0;
        text = markdownLinkPattern.Replace(text, match => 
        {
            var linkText = System.Net.WebUtility.HtmlEncode(match.Groups[1].Value);
            var url = match.Groups[2].Value;
            var placeholder = $"__LINK_PLACEHOLDER_{linkIndex++}__";
            linkPlaceholders[placeholder] = $"<a href=\"{url}\" target=\"_blank\" rel=\"noopener noreferrer\" class=\"chat-link\">{linkText}</a>";
            return placeholder;
        });
        
        // STEP 2: Escape HTML to prevent XSS
        text = System.Net.WebUtility.HtmlEncode(text);
        
        // STEP 3: Restore the preserved markdown links
        foreach (var kvp in linkPlaceholders)
        {
            text = text.Replace(kvp.Key, kvp.Value);
        }
        
        // STEP 4: Convert standalone URLs to clickable links
        var urlPlaceholders = new Dictionary<string, string>();
        var urlPattern = new System.Text.RegularExpressions.Regex(
            @"(?<!href=""|>)(https?://[^\s<>&]+)",
            System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        
        int urlIndex = 0;
        text = urlPattern.Replace(text, match => 
        {
            var url = match.Value;
            var cleanUrl = url.TrimEnd('.', ',', '!', '?', ';');
            var decodedUrl = System.Net.WebUtility.HtmlDecode(cleanUrl);
            var trailing = url.Substring(cleanUrl.Length);
            var placeholder = $"__URL_PLACEHOLDER_{urlIndex++}__";
            urlPlaceholders[placeholder] = $"<a href=\"{decodedUrl}\" target=\"_blank\" rel=\"noopener noreferrer\" class=\"chat-link\">{cleanUrl}</a>{trailing}";
            return placeholder;
        });
        
        // STEP 5: Format other markdown elements
        // Headers (###, ##, #)
        text = System.Text.RegularExpressions.Regex.Replace(text, @"^###\s+(.+)$", "<h3 class=\"chat-h3\">$1</h3>", 
            System.Text.RegularExpressions.RegexOptions.Multiline);
        text = System.Text.RegularExpressions.Regex.Replace(text, @"^##\s+(.+)$", "<h2 class=\"chat-h2\">$1</h2>", 
            System.Text.RegularExpressions.RegexOptions.Multiline);
        text = System.Text.RegularExpressions.Regex.Replace(text, @"^#\s+(.+)$", "<h1 class=\"chat-h1\">$1</h1>", 
            System.Text.RegularExpressions.RegexOptions.Multiline);
        
        // Bold, Italic, Code
        text = System.Text.RegularExpressions.Regex.Replace(text, @"\*\*([^*]+)\*\*", "<strong>$1</strong>");
        text = System.Text.RegularExpressions.Regex.Replace(text, @"__([^_]+)__", "<strong>$1</strong>");
        text = System.Text.RegularExpressions.Regex.Replace(text, @"\*([^*]+)\*", "<em>$1</em>");
        text = System.Text.RegularExpressions.Regex.Replace(text, @"`([^`]+)`", "<code class=\"inline-code\">$1</code>");
        
        // STEP 6: Restore URLs after markdown processing
        foreach (var kvp in urlPlaceholders)
        {
            text = text.Replace(kvp.Key, kvp.Value);
        }
        
        // STEP 7: Format lists (numbered and bulleted)
        var lines = text.Split('\n');
        var formattedLines = new List<string>();
        bool inOrderedList = false;
        bool inUnorderedList = false;
        
        for (int i = 0; i < lines.Length; i++)
        {
            var line = lines[i].TrimEnd();
            var trimmedLine = line.TrimStart();
            
            // Numbered list: "1. ", "2. ", etc.
            if (System.Text.RegularExpressions.Regex.IsMatch(trimmedLine, @"^\d+\.\s+"))
            {
                if (!inOrderedList)
                {
                    formattedLines.Add("<ol class=\"chat-list\">");
                    inOrderedList = true;
                }
                var content = System.Text.RegularExpressions.Regex.Replace(trimmedLine, @"^\d+\.\s+", "");
                formattedLines.Add($"<li>{content}</li>");
            }
            // Bulleted list: "- " or "* " or "‚Ä¢ "
            else if (System.Text.RegularExpressions.Regex.IsMatch(trimmedLine, @"^[-*‚Ä¢]\s+"))
            {
                if (inOrderedList)
                {
                    formattedLines.Add("</ol>");
                    inOrderedList = false;
                }
                if (!inUnorderedList)
                {
                    formattedLines.Add("<ul class=\"chat-list\">");
                    inUnorderedList = true;
                }
                var content = System.Text.RegularExpressions.Regex.Replace(trimmedLine, @"^[-*‚Ä¢]\s+", "");
                formattedLines.Add($"<li>{content}</li>");
            }
            else
            {
                if (inOrderedList)
                {
                    formattedLines.Add("</ol>");
                    inOrderedList = false;
                }
                if (inUnorderedList)
                {
                    formattedLines.Add("</ul>");
                    inUnorderedList = false;
                }
                formattedLines.Add(line);
            }
        }
        
        // Close any open lists
        if (inOrderedList) formattedLines.Add("</ol>");
        if (inUnorderedList) formattedLines.Add("</ul>");
        
        text = string.Join("\n", formattedLines);
        
        // Line breaks (but not inside list elements or headers)
        text = System.Text.RegularExpressions.Regex.Replace(text, @"(?<!</(li|h1|h2|h3|ol|ul)>)\n(?!<(li|h1|h2|h3|ol|ul))", "<br>");
        
        return text;
    }

    public void Dispose()
    {
        // Cleanup if needed
    }

    /// <summary>
    /// Build conversation history from local messages for AI context
    /// </summary>
    private List<OpenAI.Chat.ChatMessage>? BuildConversationHistory()
    {
        if (messages.Count == 0)
            return null;
            
        var recentMessages = messages.TakeLast(10).ToList();
        var history = new List<OpenAI.Chat.ChatMessage>();
        
        foreach (var msg in recentMessages)
        {
            if (msg.IsUser)
            {
                history.Add(new OpenAI.Chat.UserChatMessage(msg.Text));
            }
            else
            {
                history.Add(new OpenAI.Chat.AssistantChatMessage(msg.Text));
            }
        }
        
        return history.Count > 0 ? history : null;
    }

    private class ChatMessage
    {
        public string Text { get; set; } = string.Empty;
        public bool IsUser { get; set; }
        public DateTime Timestamp { get; set; }
        public List<ArticleReference>? References { get; set; }
        
        // Source tracking (NEW - for feedback)
        public List<string> Sources { get; set; } = new();
        
        // Feedback state (UPDATED)
        public bool HasFeedback { get; set; } = false;
        public bool? IsPositive { get; set; }
        public bool ShowCorrectionInput { get; set; } = false;
        public string CorrectionText { get; set; } = string.Empty;
        
        // Metadata for feedback
        public string? OriginalQuery { get; set; }
        public string AgentType { get; set; } = "General";
        public double BestSearchScore { get; set; }
        public bool WasLowConfidence { get; set; }
    }

    private string GetUserInitial()
    {
        if (currentUser != null && !string.IsNullOrEmpty(currentUser.FullName))
        {
            return currentUser.FullName[0].ToString().ToUpper();
        }
        return "U";
    }
}

