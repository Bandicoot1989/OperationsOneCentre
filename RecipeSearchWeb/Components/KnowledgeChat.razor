@inject FeedbackService FeedbackService
@inject NavigationManager Navigation
@implements IDisposable

<div class="kb-chat-container @(isOpen ? "open" : "")">
    @* Chat Toggle Button *@
    <button class="chat-toggle-btn @(isOpen ? "hidden" : "")" @onclick="ToggleChat" title="Ask the Knowledge Assistant">
        <span class="chat-icon">ü§ñ</span>
        <span class="chat-pulse"></span>
    </button>

    @* Chat Window *@
    <div class="chat-window @(isOpen ? "open" : "")">
        <div class="chat-header">
            <div class="header-info">
                <span class="assistant-icon">ü§ñ</span>
                <div class="header-text">
                    <h4>Knowledge Assistant</h4>
                    <span class="status">@(isProcessing ? "Thinking..." : "Online")</span>
                </div>
            </div>
            <div class="header-actions">
                <button class="header-btn" @onclick="ClearChat" title="Clear conversation">üóëÔ∏è</button>
                <button class="header-btn close-btn" @onclick="ToggleChat" title="Close">‚úï</button>
            </div>
        </div>

        <div class="chat-messages" @ref="messagesContainer">
            @if (!messages.Any())
            {
                <div class="welcome-message">
                    <div class="welcome-icon">üëã</div>
                    <h3>Hello! I'm your Knowledge Assistant</h3>
                    <p>Ask me anything about IT procedures, troubleshooting, or company documentation.</p>
                    <div class="suggested-questions">
                        <span class="suggestions-label">Try asking:</span>
                        <button class="suggestion-chip" @onclick="@(() => AskSuggestion("How do I reset a password?"))">
                            How do I reset a password?
                        </button>
                        <button class="suggestion-chip" @onclick="@(() => AskSuggestion("What VPN should I use?"))">
                            What VPN should I use?
                        </button>
                        <button class="suggestion-chip" @onclick="@(() => AskSuggestion("How to create a new user?"))">
                            How to create a new user?
                        </button>
                    </div>
                </div>
            }
            else
            {
                @foreach (var msg in messages)
                {
                    <div class="message @(msg.IsUser ? "user" : "assistant")">
                        <div class="message-avatar">
                            @(msg.IsUser ? "üë§" : "ü§ñ")
                        </div>
                        <div class="message-content">
                            <div class="message-text">@((MarkupString)FormatMessage(msg.Text))</div>
                            @if (!msg.IsUser && msg.References?.Any() == true)
                            {
                                <div class="message-references">
                                    <span class="references-label">üìö Sources:</span>
                                    @foreach (var reference in msg.References.Take(3))
                                    {
                                        <a class="reference-link" href="/knowledge/@reference.KBNumber" @onclick="() => NavigateToArticle(reference.KBNumber)" @onclick:preventDefault>
                                            @reference.KBNumber
                                        </a>
                                    }
                                </div>
                            }
                            @* Feedback buttons for assistant messages *@
                            @if (!msg.IsUser)
                            {
                                <div class="message-feedback">
                                    @if (msg.FeedbackSubmitted)
                                    {
                                        <span class="feedback-submitted">
                                            @(msg.FeedbackIsPositive == true ? "üëç Thanks!" : "üëé Feedback recorded")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="feedback-label">Was this helpful?</span>
                                        <button class="feedback-btn positive" @onclick="() => SubmitFeedback(msg, true)" title="Yes, helpful">üëç</button>
                                        <button class="feedback-btn negative" @onclick="() => SubmitFeedback(msg, false)" title="Not helpful">üëé</button>
                                    }
                                </div>
                            }
                            <span class="message-time">@msg.Timestamp.ToString("HH:mm")</span>
                        </div>
                    </div>
                }

                @if (isProcessing)
                {
                    <div class="message assistant">
                        <div class="message-avatar">ü§ñ</div>
                        <div class="message-content">
                            <div class="typing-indicator">
                                <span></span>
                                <span></span>
                                <span></span>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <div class="chat-input-area">
            <div class="input-wrapper">
                <textarea 
                    @bind="currentMessage" 
                    @bind:event="oninput"
                    @onkeydown="HandleKeyDown"
                    placeholder="Type your question..."
                    rows="1"
                    disabled="@isProcessing"
                    class="chat-input"></textarea>
                <button 
                    class="send-btn" 
                    @onclick="SendMessage" 
                    disabled="@(isProcessing || string.IsNullOrWhiteSpace(currentMessage))"
                    title="Send message">
                    @(isProcessing ? "‚è≥" : "‚û§")
                </button>
            </div>
            <span class="input-hint">Press Enter to send, Shift+Enter for new line</span>
        </div>
    </div>
</div>

@code {
    private bool isOpen = false;
    private bool isProcessing = false;
    private string currentMessage = string.Empty;
    private List<ChatMessage> messages = new();
    private ElementReference messagesContainer;

    private void ToggleChat()
    {
        isOpen = !isOpen;
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            await SendMessage();
        }
    }

    private async Task AskSuggestion(string suggestion)
    {
        currentMessage = suggestion;
        await SendMessage();
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(currentMessage) || isProcessing)
            return;

        var question = currentMessage.Trim();
        currentMessage = string.Empty;
        
        // Add user message
        messages.Add(new ChatMessage
        {
            Text = question,
            IsUser = true,
            Timestamp = DateTime.Now
        });

        isProcessing = true;
        StateHasChanged();
        await ScrollToBottom();

        try
        {
            // Build conversation history for context
            var conversationHistory = BuildConversationHistory();
            
            // Get AI response with conversation context
            var response = await AgentService.AskAsync(question, conversationHistory);

            // Add assistant message with metadata for feedback
            messages.Add(new ChatMessage
            {
                Text = response.Answer,
                IsUser = false,
                Timestamp = DateTime.Now,
                References = response.RelevantArticles,
                OriginalQuery = question,
                AgentType = response.AgentType ?? "General",
                BestSearchScore = response.BestSearchScore,
                WasLowConfidence = response.IsLowConfidence
            });
        }
        catch
        {
            messages.Add(new ChatMessage
            {
                Text = "I'm sorry, I encountered an error. Please try again or contact IT support.",
                IsUser = false,
                Timestamp = DateTime.Now
            });
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
            await ScrollToBottom();
        }
    }

    private void ClearChat()
    {
        messages.Clear();
    }

    /// <summary>
    /// Submit feedback for a chat message
    /// </summary>
    private async Task SubmitFeedback(ChatMessage msg, bool isHelpful)
    {
        if (msg.FeedbackSubmitted) return;
        
        try
        {
            await FeedbackService.SubmitFeedbackAsync(
                query: msg.OriginalQuery ?? "",
                response: msg.Text,
                isHelpful: isHelpful,
                agentType: msg.AgentType,
                bestScore: msg.BestSearchScore,
                wasLowConfidence: msg.WasLowConfidence
            );
            
            msg.FeedbackSubmitted = true;
            msg.FeedbackIsPositive = isHelpful;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error submitting feedback: {ex.Message}");
        }
    }

    private void NavigateToArticle(string kbNumber)
    {
        Navigation.NavigateTo($"/knowledge/{kbNumber}");
        isOpen = false;
    }

    private async Task ScrollToBottom()
    {
        await Task.Delay(50);
        // Scroll will be handled by CSS scroll-behavior
    }

    private string FormatMessage(string text)
    {
        if (string.IsNullOrEmpty(text)) return text;
        
        // STEP 1: Extract and preserve markdown links BEFORE HTML encoding
        // This prevents the brackets from being encoded and breaking the pattern
        var linkPlaceholders = new Dictionary<string, string>();
        var markdownLinkPattern = new System.Text.RegularExpressions.Regex(
            @"\[([^\]]+)\]\((https?://[^\)]+)\)");
        
        int linkIndex = 0;
        text = markdownLinkPattern.Replace(text, match => 
        {
            var linkText = System.Net.WebUtility.HtmlEncode(match.Groups[1].Value);
            var url = match.Groups[2].Value;
            var placeholder = $"__LINK_PLACEHOLDER_{linkIndex++}__";
            linkPlaceholders[placeholder] = $"<a href=\"{url}\" target=\"_blank\" rel=\"noopener noreferrer\" class=\"chat-link\">{linkText}</a>";
            return placeholder;
        });
        
        // STEP 2: Escape HTML to prevent XSS
        text = System.Net.WebUtility.HtmlEncode(text);
        
        // STEP 3: Restore the preserved markdown links
        foreach (var kvp in linkPlaceholders)
        {
            text = text.Replace(kvp.Key, kvp.Value);
        }
        
        // STEP 4: Convert standalone URLs to clickable links (URLs not already in markdown format)
        var urlPattern = new System.Text.RegularExpressions.Regex(
            @"(?<!href=""|>)(https?://[^\s<>&]+)",
            System.Text.RegularExpressions.RegexOptions.IgnoreCase);
        text = urlPattern.Replace(text, match => 
        {
            var url = match.Value;
            // Clean trailing punctuation that might be part of the sentence
            var cleanUrl = url.TrimEnd('.', ',', '!', '?', ';');
            // Decode any HTML entities in the URL for the href
            var decodedUrl = System.Net.WebUtility.HtmlDecode(cleanUrl);
            var trailing = url.Substring(cleanUrl.Length);
            return $"<a href=\"{decodedUrl}\" target=\"_blank\" rel=\"noopener noreferrer\" class=\"chat-link\">{cleanUrl}</a>{trailing}";
        });
        
        // STEP 5: Format other markdown elements
        // Bold text **text** or __text__
        text = System.Text.RegularExpressions.Regex.Replace(text, @"\*\*([^*]+)\*\*", "<strong>$1</strong>");
        text = System.Text.RegularExpressions.Regex.Replace(text, @"__([^_]+)__", "<strong>$1</strong>");
        
        // Italic text *text* or _text_
        text = System.Text.RegularExpressions.Regex.Replace(text, @"\*([^*]+)\*", "<em>$1</em>");
        text = System.Text.RegularExpressions.Regex.Replace(text, @"_([^_]+)_", "<em>$1</em>");
        
        // Code inline `code`
        text = System.Text.RegularExpressions.Regex.Replace(text, @"`([^`]+)`", "<code class=\"inline-code\">$1</code>");
        
        // Line breaks
        text = text.Replace("\n", "<br>");
        
        return text;
    }

    public void Dispose()
    {
        // Cleanup if needed
    }

    /// <summary>
    /// Build conversation history from local messages for AI context
    /// </summary>
    private List<OpenAI.Chat.ChatMessage>? BuildConversationHistory()
    {
        if (messages.Count == 0)
            return null;
            
        // Take last 10 messages for context (5 exchanges) to avoid token limits
        var recentMessages = messages.TakeLast(10).ToList();
        
        var history = new List<OpenAI.Chat.ChatMessage>();
        foreach (var msg in recentMessages)
        {
            if (msg.IsUser)
            {
                history.Add(new OpenAI.Chat.UserChatMessage(msg.Text));
            }
            else
            {
                history.Add(new OpenAI.Chat.AssistantChatMessage(msg.Text));
            }
        }
        
        return history.Count > 0 ? history : null;
    }

    private class ChatMessage
    {
        public string Text { get; set; } = string.Empty;
        public bool IsUser { get; set; }
        public DateTime Timestamp { get; set; }
        public List<ArticleReference>? References { get; set; }
        
        // Feedback tracking
        public bool FeedbackSubmitted { get; set; } = false;
        public bool? FeedbackIsPositive { get; set; }
        public string? OriginalQuery { get; set; }
        public string AgentType { get; set; } = "General";
        public double BestSearchScore { get; set; }
        public bool WasLowConfidence { get; set; }
    }
}

