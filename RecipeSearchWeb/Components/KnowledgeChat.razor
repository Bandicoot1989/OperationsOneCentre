                    <img src="chatbot-icon.png" alt="Assistant" class="header-logo-small" />
                    <h2 class="header-title">Knowledge Assistant</h2>
                </div>
                <div class="header-right">
                    <button class="header-action-btn" @onclick="ClearChat" title="New conversation">
                        <span class="material-symbols-outlined">add</span>
                    </button>
                </div>
            </div>

            @* Messages Area *@
            <div class="gemini-messages-area" @ref="messagesContainer">
                @foreach (var msg in messages)
                {
                    <div class="gemini-message @(msg.IsUser ? "user" : "assistant")">
                        <div class="message-avatar">
                            @if (msg.IsUser)
                            {
                                <span class="user-avatar">@GetUserInitial()</span>
                            }
                            else
                            {
                                <img src="chatbot-icon.png" alt="Bot" class="assistant-avatar" />
                            }
                        </div>
                        <div class="message-body">
                            <div class="message-text">@((MarkupString)FormatMessage(msg.Text))</div>
                            @if (!msg.IsUser && msg.References?.Any() == true)
                            {
                                <div class="message-references">
                                    <span class="references-label">üìö Sources:</span>
                                    @foreach (var reference in msg.References.Take(3))
                                    {
                                        <a class="reference-link" href="/knowledge/@reference.KBNumber" @onclick="() => NavigateToArticle(reference.KBNumber)" @onclick:preventDefault>
                                            @reference.KBNumber
                                        </a>
                                    }
                                </div>
                            }
                            
                            @* Feedback Section (Only for Bot Messages) *@
                            @if (!msg.IsUser)
                            {
                                <div class="message-feedback-section">
                                    @if (msg.HasFeedback)
                                    {
                                        @* Show submitted feedback state *@
                                        <div class="feedback-submitted">
                                            @if (msg.IsPositive == true)
                                            {
                                                <span class="feedback-icon positive" title="Marcado como √∫til">
                                                    <span class="material-symbols-outlined">thumb_up</span>
                                                </span>
                                                <span class="feedback-text">Gracias por tu feedback</span>
                                            }
                                            else
                                            {
                                                <span class="feedback-icon negative" title="Marcado como no √∫til">
                                                    <span class="material-symbols-outlined">thumb_down</span>
                                                </span>
                                                <span class="feedback-text">Gracias por ayudarnos a mejorar</span>
                                            }
                                        </div>
                                    }
                                    else if (!msg.ShowCorrectionInput)
                                    {
                                        @* Show feedback buttons *@
                                        <div class="feedback-buttons">
                                            <button class="feedback-btn" @onclick="() => HandlePositiveFeedback(msg)" title="Respuesta √∫til">
                                                <span class="material-symbols-outlined">thumb_up</span>
                                            </button>
                                            <button class="feedback-btn" @onclick="() => HandleNegativeFeedback(msg)" title="Respuesta no √∫til">
                                                <span class="material-symbols-outlined">thumb_down</span>
                                            </button>
                                        </div>
                                    }
                                    
